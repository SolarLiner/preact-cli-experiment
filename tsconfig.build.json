{
	"compilerOptions": {
		"target": "es5",
		"moduleResolution": "node",
		"module": "commonjs",
		"outDir": "dist",
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"baseUrl": "./packages"
	},
	"include": [
		"src/**/*.ts"
	]
}
